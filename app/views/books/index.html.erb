<body>
<!-- 投稿一覧 -->
<h1>Books</h1>
	<table>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>

				<td><%= link_to 'Show', book_path(book.id) %></td>
				<td><%= link_to 'Edit', edit_book_path(book.id) %></td>
				<td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
			</tr>
		<% end %>
	</table>

<!-- 新規投稿 -->
<h2>New books</h2>
<%= form_for(@book) do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>
	<h4>Title</h4>
	<div class="field">
		<%= f.text_field :title %>
	</div>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<div class="action">
		<%= f.submit 'Create Book' %>
	</div>
<% end %>

</body>

