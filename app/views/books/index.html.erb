<!-- 投稿一覧 -->
<h1>Books</h1>
<% @books.each do |book| %>
	<p>Title</p>
	<P><%= book.title %></P>
	<P>Body</P>
	<P><%= book.body %></P>

	<%= link_to 'Show', book_path(book.id) %>
	<%= link_to 'Edit', edit_book_path(book.id) %>
	<%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>

<% end %>

<!-- 新規投稿 -->
<h2>New books</h2>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_area :title %>
	<h4>Body</h4>
	<%= f.text_field :body %>
	<%= f.submit 'Create Book' %>
<% end %>

